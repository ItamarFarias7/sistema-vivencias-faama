<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <title>Painel Administrativo</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .admin-container {
      max-width: 1200px;
      margin: 20px auto;
      padding: 0 20px;
    }

    .nav-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: white;
      padding: 15px 20px;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
      margin-bottom: 30px;
    }

    .grid-equipes {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 20px;
    }

    .equipe-card {
      background: white;
      border-top: 4px solid var(--primary-color);
      padding: 15px;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    .badge {
      background: #e9ecef;
      padding: 3px 8px;
      border-radius: 12px;
      font-size: 12px;
      font-weight: bold;
    }

    .btn-sm {
      padding: 8px 12px;
      font-size: 14px;
      text-decoration: none;
      border-radius: 4px;
      color: white;
      display: inline-block;
      cursor: pointer;
      border: none;
    }

    /* Estilos novos para as a√ß√µes do admin */
    .aluno-item {
      padding: 10px 0;
      border-bottom: 1px solid #f1f1f1;
    }

    .aluno-info {
      display: flex;
      justify-content: space-between;
      margin-bottom: 5px;
    }

    .aluno-acoes {
      display: flex;
      gap: 10px;
      align-items: center;
      background-color: #fcfcfc;
      padding: 5px;
      border-radius: 5px;
    }

    .select-mover {
      padding: 4px;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-size: 12px;
      width: 140px;
    }
  </style>
</head>

<body style="display: block;">
  <div class="admin-container">
    <div class="nav-bar">
      <div>
        <a href="/" style="color: var(--primary-color); text-decoration: none; font-weight: bold;">‚Üê Ver Tela do
          Aluno</a>
        <a href="/logout" style="color: #dc3545; text-decoration: none; font-weight: bold; margin-left: 20px;">Sair
          üö™</a>
      </div>
      <div>
        <a href="/admin/exportar/excel" class="btn-sm"
          style="background: var(--secondary-color); margin-right: 10px;">üìä Baixar Excel</a>
        <a href="/admin/exportar/pdf" class="btn-sm" style="background: #dc3545;">üìÑ Baixar PDF</a>
      </div>
    </div>

    <div class="card" style="margin-bottom: 30px; padding: 2rem;">
      <h2 style="color: var(--primary-color); margin-top: 0; margin-bottom: 2rem;">Criar Novo Eixo</h2>
      <form action="/admin/criar_eixo" method="POST" class="row">
        <div class="form-group col">
          <input type="text" name="nome_eixo" class="form-control" placeholder="Nome (Ex: Sa√∫de)" required>
        </div>
        <div class="form-group col">
          <input type="text" name="descricao" class="form-control" placeholder="Descri√ß√£o" required>
        </div>
        <div class="form-group col" style="max-width: 150px;">
          <input type="number" name="qtd_grupos" class="form-control" placeholder="N¬∫ Grupos" min="1" required>
        </div>
        <button type="submit" class="botao"
          style="margin-top: 0; max-width: 150px; height: 4.5rem; padding: 0;">Gerar</button>
      </form>
    </div>

    <% Object.keys(relatorio).forEach(function(nomeEixo) { %>
      <h3 style="border-bottom: 2px solid #ccc; padding-bottom: 10px; color: #555; margin-top: 30px;">üìç <%= nomeEixo %>
      </h3>

      <div class="grid-equipes" style="margin-bottom: 40px;">
        <% relatorio[nomeEixo].forEach(function(grupo) { %>
          <div class="equipe-card">
            <h4 style="margin: 0 0 10px 0; display: flex; justify-content: space-between;">
              <%= grupo.nome_grupo %>
                <span class="badge">
                  <%= grupo.total %>/10
                </span>
            </h4>

            <ul style="list-style: none; padding: 0; margin: 0; font-size: 14px;">
              <% grupo.alunos.forEach(function(aluno) { %>
                <li class="aluno-item">
                  <div class="aluno-info">
                    <strong>
                      <%= aluno.nome %>
                    </strong>
                    <span class="badge">
                      <%= aluno.curso %> - <%= aluno.periodo %>¬∫P
                    </span>
                  </div>

                  <div class="aluno-acoes">
                    <form action="/admin/mover_aluno" method="POST" style="display: flex; gap: 5px; flex: 1;">
                      <input type="hidden" name="aluno_id" value="<%= aluno.id %>">
                      <select name="novo_grupo_id" class="select-mover" required>
                        <option value="">Mover para...</option>
                        <% todosGrupos.forEach(function(tg) { %>
                          <% if (tg.id !==grupo.id) { %>
                            <option value="<%= tg.id %>">
                              <%= tg.eixo_nome %> - <%= tg.grupo_nome %>
                            </option>
                            <% } %>
                              <% }); %>
                      </select>
                      <button type="submit" class="btn-sm"
                        style="background: var(--primary-color); padding: 4px 8px; font-size: 12px;">Mover</button>
                    </form>

                    <form action="/admin/excluir_aluno" method="POST"
                      onsubmit="return confirm('Tem certeza que deseja excluir o aluno <%= aluno.nome %>?');">
                      <input type="hidden" name="aluno_id" value="<%= aluno.id %>">
                      <button type="submit" class="btn-sm"
                        style="background: #dc3545; padding: 4px 8px; font-size: 12px;">Excluir</button>
                    </form>
                  </div>

                </li>
                <% }); %>
            </ul>
          </div>
          <% }); %>
      </div>
      <% }); %>
  </div>
</body>

</html>